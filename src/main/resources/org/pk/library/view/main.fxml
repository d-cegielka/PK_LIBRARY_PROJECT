<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXToggleButton?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<AnchorPane fx:id="mainPane" minHeight="-Infinity" prefHeight="800.0" prefWidth="1280.0" stylesheets="@dark-theme.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.pk.library.view.MainController">
   <children>
      <MenuBar layoutY="2.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <menus>
            <Menu mnemonicParsing="false" text="Plik">
               <items>
                  <MenuItem mnemonicParsing="false" text="Zmień źródło danych" />
                  <MenuItem mnemonicParsing="false" text="Eksportuj do XML" />
                  <MenuItem mnemonicParsing="false" text="Zamknij" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Wygląd">
               <items>
                  <MenuItem mnemonicParsing="false" text="Tryb ciemny" />
                  <MenuItem mnemonicParsing="false" text="Tryb jasny" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
               <items>
                  <MenuItem mnemonicParsing="false" text="About" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <StackPane fx:id="mainStackPane" prefHeight="150.0" prefWidth="200.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="25.0">
         <TabPane fx:id="tabPane" layoutX="14.0" layoutY="27.0" prefHeight="383.0" prefWidth="1280.0" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="25.0">
         <tabs>
            <Tab text="Książki">
               <content>
                  <fx:include fx:id="book" source="book.fxml" />
               </content>
            </Tab>
            <Tab text="Czytelnicy">
               <content>
                 <fx:include fx:id="reader" source="reader.fxml" />
               </content>
            </Tab>
            <Tab onSelectionChanged="#reloadRentView" text="Wypożyczenia">
               <content>
                  <fx:include fx:id="rent" source="rent.fxml" />
               </content>
            </Tab>
            <Tab text="Zwroty">
               <content>
                  <fx:include fx:id="return" source="return.fxml" />
               </content>
            </Tab>
            <Tab text="Zwroty kalendarz">
               <content>
                  <fx:include fx:id="calendar" source="returnCalendar.fxml" />
               </content>
            </Tab>
         </tabs>
      </TabPane>
         <JFXToggleButton fx:id="changeStyleToggleButton" contentDisplay="RIGHT" graphicTextGap="6.0" onAction="#changeStyle" size="5.0" text="Jasny motyw" StackPane.alignment="TOP_RIGHT" />

      </StackPane>
      <HBox layoutX="14.0" layoutY="700.0" prefHeight="30.0" style="-fx-background-color: lightgray;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
   </children>
</AnchorPane>
